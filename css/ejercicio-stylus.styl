main-font = 'Lato', sans-serif
secondary-font = 'Oswald', sans-serif
primary-color = #333333
secondary-color = #8841DA
clear-color = #ffffff

container()
  display flex 
  width 90%
  margin 0 auto
  padding 30px 0

box-shadow()
  background-color clear-color
  box-shadow 0px 20px 33px  0px rgba(0, 0, 0, .20)

*
  box-sizing border-box
  
body
  margin 0
  font-family main-font
  color primary-color

.buscador
  width 100%
  height 250px
  padding 100px
  background-image url('../images/cover.jpg')
  background-size cover
  text-align center
  &__input
    width 75%
    height 60px
    padding 20px
    border none
    border-radius 30px
    font-size 25px

.encabezado--con-filtros
  container()
  h2
    margin-top 10px
    text-transform uppercase
    font-weight 500
    font-size 50px
    font-family secondary-font
  .filtros
    width 250px
    height 75px
    padding 20px
    margin-left auto
    box-shadow()
    span
      text-transform uppercase
      font-family secondary-font
    a
      margin-left 20px
      color primary-color
      
.contenido
  margin-bottom 400px
  justify-content space-evenly
  contenedor()

.caja
  max-width 400px
  box-shadow()
  &__contenido
    padding 20px
    background-color clear-color
    span
      text-transform uppercase

  
  
  